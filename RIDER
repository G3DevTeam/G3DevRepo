CREATE TABLE RIDER (
    ID_RIDER INT AUTO_INCREMENT PRIMARY KEY,
     USERNAME VARCHAR(10) NOT NULL,
     PASSCODE VARCHAR(100),
     PHONENUMBER NUMBER,
	 SIGNUPDATE DATETIME NOW,
	 ISVALID BOOLEAN DEFAULT TRUE,
	 UNVALADATIONDATE DATETIME,
	 );
CREATE TABLE RIDER_CAR(
     IDRIDERCAR INT AUTO_INCREMENT,
	 ID_RIDER INT REFERENCES TO RIDER(ID),
	 IDMODEL INT AUTO_INCREMENT,
	 ISVALID BOOLEAN DEFAULT TRUE,
	 DATEADDED DATE,
	 UNVALADATIONDATE DATE,
	 PRIMARY KEY(IDRIDERCAR,IDMODEL),
	 );
CREATE TABLE CARBRAND (
     IDBRAND INT AUTO_INCREMENT PRIMARY KEY,
	 BRANDNAME VARCHAR(100) NOT NULL,
	 );
CREATE TABLE MODEL ( 
	 IDMODEL INT REFERENCES TO RIDER_CAR(IDMODEL),
	 IDBRAND INT  REFERENCES TO CARBRAND(IDBRAND),	
	 MADEYEAR YEAR,
	 MODELLABER VARCHAR (100) NOT NULL,
	 );
CREATE TABLE WILAYA(
     IDWILAYA INT AUTO_INCREMENT PRIMARY KEY,
	 WILAYA_CODE VARCHAR(10),
	 WLAYA_LABEL VARCHAR(10),
	 );
CREATE TABLE CITY(
	 ID_CITY INT AUTO_INCREMENT PRIMARY KEY,
	 IDWILAYA INT REFERENCES TO WILAYA(IDWILAYA),
	 CITYLABEL VARCHAR (10),
	 );
CREATE TABLE TRIP(
	 IDTRIP INT AUTO_INCREMENT PRIMARY KEY,
	 IDRIDERCAR REFERENCES TO RIDER_CAR(IDRIDERCAR),
	 STARTID_CITY REFERENCES TO CITY(ID_CITY),
	 ENDID_CITY REFERENCES TO CITY(ID_CITY),
	 SP_DATETIME DATETIME,
	 CREATIONDATE DATETIME NOW,
	 ISVALID BOOLEAN BY DEFAULT TRUE,
	 );
	 
	 
	 
		
	 