CREATE TABLE RIDER (
    ID_RIDER INT AUTO_INCREMENT PRIMARY KEY,
     USER_NAME VARCHAR(10) NOT NULL,
     PASS_CODE VARCHAR(100),
     PHONE_NUMBER NUMBER,
	 SIGNUP_DATE DATETIME NOW,
	 IS_VALID BOOLEAN DEFAULT TRUE,
	 UNVALADATION_DATE DATETIME
	 );
CREATE TABLE RIDER_CAR(
     ID_RIDER_CAR INT AUTO_INCREMENT,
	 ID_RIDER INT REFERENCES TO RIDER(ID),
	 ID_MODEL INT AUTO_INCREMENT,
	 IS_VALID BOOLEAN DEFAULT TRUE,
	 DATE_ADDED DATE,
	 UNVALADATION_DATE DATE,
	 PRIMARY KEY(ID_RIDER_CAR,ID_MODEL)
	 );
CREATE TABLE CARBRAND (
     ID_BRAND INT AUTO_INCREMENT PRIMARY KEY,
	 BRAND_NAME VARCHAR(100) NOT NULL
	 );
CREATE TABLE MODEL ( 
	 ID_MODEL INT REFERENCES TO RIDER_CAR(ID_MODEL),
	 ID_BRAND INT  REFERENCES TO CARBRAND(ID_BRAND),	
	 MADE_YEAR YEAR,
	 MODEL_LABEL VARCHAR (100) NOT NULL
	 );
CREATE TABLE WILAYA(
     ID_WILAYA INT AUTO_INCREMENT PRIMARY KEY,
	 WILAYA_CODE INT,
	 WILAYA_LABEL VARCHAR(10)
	 );
CREATE TABLE CITY(
	 ID_CITY INT AUTO_INCREMENT PRIMARY KEY,
	 ID_WILAYA INT REFERENCES TO WILAYA(ID_WILAYA),
	 CITY_LABEL VARCHAR(10)
	 );
CREATE TABLE TRIP(
	 ID_TRIP INT AUTO_INCREMENT PRIMARY KEY,
	 ID_RIDERCAR REFERENCES TO RIDER_CAR(ID_RIDER_CAR),
	 START_ID_CITY REFERENCES TO CITY(ID_CITY),
	 END_ID_CITY REFERENCES TO CITY(ID_CITY),
	 SP_DATE_TIME DATETIME,
	 CREATION_DATE DATETIME NOW(),
	 IS_VALID BOOLEAN DEFAULT TRUE
	 );
	 
	 
	 
		
	 
